{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "module": "commonjs"
  },
  "include": ["src"]
}
